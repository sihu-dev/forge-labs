CLOUDINARY_API_KEY=xxxxx
CLOUDINARY_API_SECRET=xxxxx

# ============================================
# MONITORING & ERROR TRACKING
# ============================================
# Sentry (error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Better Stack (uptime monitoring)
BETTERSTACK_API_KEY=xxxxx

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable specific features
ENABLE_AUTO_PUBLISH=false  # Set to true to auto-publish without approval
ENABLE_SOCIAL_DISTRIBUTION=true
ENABLE_EMAIL_DISTRIBUTION=true
ENABLE_IMAGE_GENERATION=false
ENABLE_VIDEO_SCRIPTS=false
ENABLE_A_B_TESTING=true

# Content generation settings
DEFAULT_WORD_COUNT=2000
DEFAULT_CONTENT_TYPE=tutorial
DEFAULT_TARGET_AUDIENCE=solo developers

# SEO settings
MIN_SEO_SCORE=80
MIN_GRAMMAR_SCORE=90
MIN_READABILITY_SCORE=60

# Keyword research settings
MIN_SEARCH_VOLUME=100
MAX_KEYWORD_DIFFICULTY=60
KEYWORD_EXPANSION_FACTOR=20  # How many long-tail variations per seed keyword

# ============================================
# COST TRACKING
# ============================================
# For monitoring monthly costs
MONTHLY_BUDGET_USD=135
CLAUDE_COST_PER_MILLION_TOKENS_INPUT=3.00
CLAUDE_COST_PER_MILLION_TOKENS_OUTPUT=15.00
