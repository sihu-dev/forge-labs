# ============================================
# OUTREACH AUTOMATION - Environment Variables
# ============================================
# Copy this file to apps/bidflow/.env and fill in your credentials

# ============================================
# Claude AI (Required)
# ============================================
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-api03-xxx

# ============================================
# Email - Instantly.ai (Required for Email)
# ============================================
# Sign up: https://instantly.ai
# Dashboard → Settings → API Keys
INSTANTLY_API_KEY=xxx
INSTANTLY_WORKSPACE_ID=xxx
INSTANTLY_CAMPAIGN_ID=xxx

# Email sending configuration
FROM_EMAIL=outreach@yourcompany.com
FROM_NAME=Your Name

# ============================================
# LinkedIn - HeyReach (Optional)
# ============================================
# Sign up: https://heyreach.io
# Settings → API Access
HEYREACH_API_KEY=xxx
HEYREACH_ACCOUNT_ID=xxx

# ============================================
# Voice AI - Vapi.ai (Optional)
# ============================================
# Sign up: https://vapi.ai
# Dashboard → API Keys
VAPI_API_KEY=xxx
VAPI_ASSISTANT_ID=xxx
VAPI_PHONE_NUMBER_ID=xxx

# ============================================
# WhatsApp Business API (Optional)
# ============================================
# Set up via Facebook Business Manager
# https://developers.facebook.com/docs/whatsapp/cloud-api/get-started
WHATSAPP_PHONE_NUMBER_ID=xxx
WHATSAPP_ACCESS_TOKEN=xxx
WHATSAPP_BUSINESS_ACCOUNT_ID=xxx
WHATSAPP_VERIFY_TOKEN=your-random-verify-token

# ============================================
# Campaign Settings (Optional)
# ============================================
# Default campaign settings
DEFAULT_DAILY_SEND_LIMIT=200
DEFAULT_TIMEZONE=America/New_York
SKIP_WEEKENDS=true
BUSINESS_HOURS_ONLY=true

# Send time optimization
OPTIMAL_SEND_TIMES=09:00,14:00,16:30

# ============================================
# Rate Limiting (Optional)
# ============================================
# Email limits (per account)
EMAIL_MAX_PER_HOUR=50
EMAIL_MAX_PER_DAY=200
EMAIL_MIN_DELAY_SECONDS=30

# LinkedIn limits (per account)
LINKEDIN_CONNECTIONS_PER_DAY=100
LINKEDIN_MESSAGES_PER_DAY=150
LINKEDIN_MIN_DELAY_SECONDS=60

# Phone limits (per day)
PHONE_MAX_PER_DAY=50
PHONE_MIN_DELAY_SECONDS=120

# WhatsApp limits (per day)
WHATSAPP_MAX_PER_DAY=1000
WHATSAPP_MIN_DELAY_SECONDS=10

# ============================================
# AI Personalization (Optional)
# ============================================
# Claude model selection
CLAUDE_MODEL_RESEARCH=claude-3-5-haiku-20241022
CLAUDE_MODEL_PERSONALIZATION=claude-3-5-sonnet-20241022
CLAUDE_MODEL_OBJECTION_HANDLING=claude-3-5-sonnet-20241022

# Personalization settings
AI_PERSONALIZATION_LEVEL=medium # basic, medium, deep
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# A/B testing
AB_VARIANT_COUNT=3
AB_MIN_SAMPLE_SIZE=100
AB_CONFIDENCE_LEVEL=0.95

# ============================================
# Webhook Configuration (Optional)
# ============================================
# Base URL for webhooks (production)
WEBHOOK_BASE_URL=https://your-domain.com

# Webhook endpoints (auto-configured)
# Email:    {WEBHOOK_BASE_URL}/api/v1/outreach/webhooks?provider=instantly
# LinkedIn: {WEBHOOK_BASE_URL}/api/v1/outreach/webhooks?provider=heyreach
# Voice:    {WEBHOOK_BASE_URL}/api/v1/outreach/webhooks?provider=vapi
# WhatsApp: {WEBHOOK_BASE_URL}/api/v1/outreach/webhooks?provider=whatsapp

# ============================================
# Database (Optional - if using persistence)
# ============================================
# Supabase or PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/outreach
# or
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_ROLE_KEY=xxx

# ============================================
# Integrations (Optional)
# ============================================
# Calendar for meeting scheduling
CALENDLY_API_KEY=xxx
CALENDLY_WEBHOOK_SECRET=xxx

# CRM integration
HUBSPOT_API_KEY=xxx
SALESFORCE_CLIENT_ID=xxx
SALESFORCE_CLIENT_SECRET=xxx

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx

# ============================================
# Security (Required for Production)
# ============================================
# Encryption key for storing credentials
ENCRYPTION_KEY=your-32-character-encryption-key

# API authentication
API_SECRET_KEY=your-api-secret-key

# CORS settings
ALLOWED_ORIGINS=https://your-frontend.com,https://dashboard.com

# ============================================
# Monitoring & Analytics (Optional)
# ============================================
# Logging
LOG_LEVEL=info # debug, info, warn, error
ENABLE_REQUEST_LOGGING=true

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=mixpanel # mixpanel, segment, amplitude
ANALYTICS_API_KEY=xxx

# Error tracking
SENTRY_DSN=https://xxx@sentry.io/xxx

# ============================================
# Development (Local Only)
# ============================================
# Enable mock mode (no real API calls)
MOCK_MODE=false

# Test emails (for development)
TEST_EMAIL_RECIPIENT=test@yourcompany.com

# Verbose logging
DEBUG=true

# ============================================
# Notes
# ============================================
# 1. Never commit this file with real credentials to Git
# 2. Use .env.local for local development
# 3. Use environment-specific configs in production (Vercel, Railway, etc.)
# 4. Rotate API keys regularly
# 5. Use key vault solutions in production (AWS Secrets Manager, etc.)
