{
  "name": "forge-labs",
  "version": "1.0.0",
  "private": true,
  "description": "FORGE LABS - 나노인자 기반 AI 플랫폼 통합 모노레포",
  "keywords": [
    "ai",
    "trading",
    "automation",
    "monorepo",
    "typescript"
  ],
  "license": "MIT",
  "author": "FORGE LABS",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:hephaitos": "turbo build --filter=hephaitos",
    "build:bidflow": "turbo build --filter=bidflow-standalone",
    "build:packages": "turbo build --filter=./packages/*",
    "dev": "turbo dev",
    "dev:hephaitos": "turbo dev --filter=hephaitos",
    "dev:bidflow": "turbo dev --filter=bidflow-standalone",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "typecheck": "turbo typecheck",
    "typecheck:hephaitos": "turbo typecheck --filter=hephaitos",
    "typecheck:bidflow": "turbo typecheck --filter=bidflow-standalone",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "clean:cache": "rm -rf .turbo node_modules/.cache",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "check:packages": "turbo typecheck test lint --filter=./packages/*",
    "deps:update": "pnpm -r update --latest",
    "deps:check": "pnpm -r outdated",
    "graph": "turbo run build --graph=graph.html",
    "forge:feature": "node .forge/cli/feature.js",
    "forge:design": "node .forge/cli/design.js",
    "forge:implement": "node .forge/cli/implement.js",
    "forge:verify": "node .forge/cli/verify.js",
    "g": "powershell -ExecutionPolicy Bypass -File .vscode/scripts/verify_workspace.ps1",
    "g:apply": "powershell -ExecutionPolicy Bypass -File .vscode/scripts/verify_workspace.ps1 -AutoFix"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^2.0.76",
    "@types/node": "^22.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "glob": ">=10.5.0",
      "dompurify": ">=3.2.3"
    }
  }
}
