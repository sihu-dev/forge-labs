{
  // ============================================
  // FORGE LABS VS Code Settings (Optimized)
  // ============================================

  // === 에디터 기본 설정 ===
  "editor.fontSize": 14,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Cascadia Code', Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [100, 120],
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.suggestSelection": "first",
  "editor.stickyScroll.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": true,
  "editor.accessibilitySupport": "off",
  "editor.lineNumbers": "on",
  "editor.renderLineHighlight": "all",
  "editor.folding": true,
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "mouseover",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },

  // === 인텔리센스 & 자동완성 ===
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.parameterHints.enabled": true,
  "editor.inlineSuggest.enabled": true,

  // === 자동 저장 & 포맷팅 ===
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit"
  },

  // === TypeScript 설정 ===
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": false,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // === ESLint & Prettier ===
  "eslint.workingDirectories": [
    { "pattern": "apps/*" },
    { "pattern": "packages/*" }
  ],
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.run": "onType",
  "prettier.requireConfig": true,
  "prettier.singleQuote": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // === Tailwind CSS ===
  "tailwindCSS.experimental.classRegex": [
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["tw`([^`]*)`", "([^`]*)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,

  // === 파일 탐색기 ===
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.sortOrder": "type",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.test.ts, ${capture}.spec.ts, ${capture}.d.ts",
    "*.tsx": "${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.stories.tsx",
    "*.js": "${capture}.test.js, ${capture}.spec.js, ${capture}.d.js",
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock, .npmrc, .nvmrc",
    "tsconfig.json": "tsconfig.*.json, tsc*.json",
    ".eslintrc*": ".eslintignore, .prettierrc*, .prettierignore",
    "next.config.*": "next-env.d.ts, postcss.config.*, tailwind.config.*",
    ".env": ".env.*, .env.local, .env.development, .env.production"
  },
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/.cache": true,
    "**/*.tsbuildinfo": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/pnpm-lock.yaml": true,
    "**/.git": true
  },

  // === 터미널 ===
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.scrollback": 10000,

  // === Git ===
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 50,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,

  // === 모노레포 설정 ===
  "npm.packageManager": "pnpm",
  "npm.autoDetect": "on",
  "npm.scriptExplorerAction": "run",

  // === Emmet ===
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.triggerExpansionOnTab": true,

  // === 테마 & UI ===
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.list.smoothScrolling": true,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",
  "window.zoomLevel": 0,
  "window.commandCenter": true,

  // === 브레드크럼 & 네비게이션 ===
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // === 에러 렌즈 (Error Lens) ===
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.fontStyleItalic": true,
  "errorLens.messageMaxChars": 100,

  // === TODO Highlight ===
  "todohighlight.isEnable": true,
  "todohighlight.keywords": [
    { "text": "TODO:", "color": "#fff", "backgroundColor": "#ffbd2a" },
    { "text": "FIXME:", "color": "#fff", "backgroundColor": "#f06292" },
    { "text": "NOTE:", "color": "#fff", "backgroundColor": "#00bcd4" },
    { "text": "HACK:", "color": "#fff", "backgroundColor": "#e040fb" },
    { "text": "BUG:", "color": "#fff", "backgroundColor": "#ff5252" }
  ],

  // === TODO Tree ===
  "todo-tree.general.tags": ["TODO", "FIXME", "NOTE", "HACK", "BUG", "XXX"],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text-and-comment"
  },

  // === 코드 스펠 체커 ===
  "cSpell.words": [
    "hephaitos",
    "bidflow",
    "turborepo",
    "supabase",
    "tailwindcss",
    "nextjs",
    "zustand",
    "binance",
    "upbit",
    "attio",
    "hubspot",
    "apollo",
    "persana",
    "monorepo",
    "pnpm"
  ],
  "cSpell.enableFiletypes": ["typescript", "typescriptreact", "javascript", "markdown"],

  // === Import Cost ===
  "importCost.bundleSizeDecoration": "both",
  "importCost.showCalculatingDecoration": true,

  // === MCP (Model Context Protocol) 설정 ===
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "chat.mcp.autostart": true,
  "chat.mcp.gallery.enabled": true,
  "chat.mcp.access": "all",

  // === Claude Code 통합 ===
  "claude.mcp.enabled": true,
  "claude.mcp.servers": [
    "github",
    "supabase",
    "playwright",
    "filesystem",
    "memory"
  ],

  // === 문제 패널 ===
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // === 디버그 ===
  "debug.toolBarLocation": "docked",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.inlineValues": "auto",

  // === 테스트 ===
  "testing.automaticallyOpenPeekView": "failureVisible",
  "testing.countBadge": "failed",
  "testing.gutterEnabled": true,

  // === 검색 ===
  "search.smartCase": true,
  "search.showLineNumbers": true,
  "search.useGlobalIgnoreFiles": true,

  // === 파일 인코딩 ===
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // === 자동 업데이트 ===
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,

  // === 보안 ===
  "security.workspace.trust.enabled": false
}
