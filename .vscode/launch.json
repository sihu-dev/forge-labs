{
  "version": "0.2.0",
  "configurations": [
    // === HEPHAITOS 디버깅 ===
    {
      "name": "HEPHAITOS: Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/hephaitos",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "HEPHAITOS: Debug Server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --filter hephaitos dev",
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "HEPHAITOS: Debug Client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/hephaitos",
      "sourceMaps": true
    },
    {
      "name": "HEPHAITOS: Full Stack Debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm --filter hephaitos dev",
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },

    // === BIDFLOW 디버깅 ===
    {
      "name": "BIDFLOW: Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/bidflow",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "BIDFLOW: Debug Client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3010",
      "webRoot": "${workspaceFolder}/apps/bidflow",
      "sourceMaps": true
    },

    // === Jest 테스트 디버깅 ===
    {
      "name": "Jest: Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${relativeFile}",
        "--config",
        "${workspaceFolder}/jest.config.js",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Jest: All Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },

    // === Node.js 디버깅 ===
    {
      "name": "Attach to Node Process",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "HEPHAITOS: Full Debug (Server + Client)",
      "configurations": ["HEPHAITOS: Debug Server-side"],
      "stopAll": true
    }
  ]
}
