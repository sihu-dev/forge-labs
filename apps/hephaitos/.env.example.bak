# ============================================
# HEPHAITOS Environment Variables
# ============================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_USE_SUPABASE=false  # true: Supabase, false: Mock 데이터

# ============================================
# Supabase
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ============================================
# Authentication (NextAuth)
# ============================================
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# ============================================
# AI Services (Claude API - Primary)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI (Optional - Secondary)
OPENAI_API_KEY=your_openai_api_key

# ============================================
# Korea Market - 한국투자증권 Open API
# https://apiportal.koreainvestment.com/
# ============================================
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_ACCOUNT_NUMBER=your_account_number
KIS_ACCOUNT_PRODUCT_CODE=01
KIS_VIRTUAL=true  # true: 모의투자, false: 실전투자

# ============================================
# US Market - Polygon.io
# https://polygon.io/
# ============================================
POLYGON_API_KEY=your_polygon_api_key
POLYGON_PLAN=basic  # basic | starter | developer | advanced

# ============================================
# Payments - Toss Payments
# https://developers.tosspayments.com/
# ============================================
TOSS_CLIENT_KEY=your_toss_client_key
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_TEST=true  # true: 테스트, false: 실서비스

# ============================================
# Crypto Exchanges (Optional)
# ============================================
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Upbit
UPBIT_API_KEY=your_upbit_api_key
UPBIT_API_SECRET=your_upbit_api_secret

# ============================================
# Redis (Rate Limiting & Caching)
# ============================================
REDIS_URL=redis://localhost:6379
# OR use Upstash Redis
UPSTASH_REDIS_REST_URL=your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ============================================
# Error Monitoring - Sentry
# https://sentry.io/
# ============================================
SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ============================================
# Analytics (Optional)
# ============================================
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Map Services (Optional)
# ============================================
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# ============================================
# Production Settings
# ============================================
NODE_ENV=development  # development | production | test
