# ============================================
# HEPHAITOS Environment Variables
# ============================================

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_USE_SUPABASE=false  # true: Supabase, false: Mock ?�이??
# ============================================
# Supabase
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=REDACTED
SUPABASE_SERVICE_ROLE_KEY=REDACTED

# ============================================
# Authentication (NextAuth)
# ============================================
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# ============================================
# AI Services (Claude API - Primary)
# ============================================
ANTHROPIC_API_KEY=REDACTED

# OpenAI (Optional - Secondary)
OPENAI_API_KEY=REDACTED

# ============================================
# Korea Market - ?�국?�자증권 Open API
# https://apiportal.koreainvestment.com/
# ============================================
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_ACCOUNT_NUMBER=your_account_number
KIS_ACCOUNT_PRODUCT_CODE=01
KIS_VIRTUAL=true  # true: 모의?�자, false: ?�전?�자

# ============================================
# US Market - Polygon.io
# https://polygon.io/
# ============================================
POLYGON_API_KEY=your_polygon_api_key
POLYGON_PLAN=basic  # basic | starter | developer | advanced

# ============================================
# Payments - Toss Payments (Credit System)
# https://developers.tosspayments.com/
# ============================================
TOSS_CLIENT_KEY=your_toss_client_key
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_TEST=true  # true: 테스트, false: 실서비스

# Credit System Settings
NEXT_PUBLIC_CREDIT_ENABLED=true  # 크레딧 시스템 활성화
NEXT_PUBLIC_WELCOME_BONUS=50     # 신규 가입 보너스 크레딧
NEXT_PUBLIC_REFERRAL_BONUS=30    # 추천 보너스 크레딧

# ============================================
# Crypto Exchanges (Optional)
# ============================================
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Upbit
UPBIT_API_KEY=your_upbit_api_key
UPBIT_API_SECRET=your_upbit_api_secret

# ============================================
# Redis (Rate Limiting & Caching)
# ============================================
REDIS_URL=redis://localhost:6379
# OR use Upstash Redis
UPSTASH_REDIS_REST_URL=your_upstash_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# ============================================
# Loop 11: Backtest Queue System (BullMQ)
# ============================================
UPSTASH_REDIS_URL=redis://:password@region.upstash.io:port
UPSTASH_REDIS_HOST=region.upstash.io
UPSTASH_REDIS_PORT=6379
UPSTASH_REDIS_PASSWORD=your_redis_password

# Worker Settings
WORKER_CONCURRENCY=5  # 동시 처리 Job 수
WORKER_MAX_RETRIES=3  # 실패 시 재시도 횟수

# ============================================
# Error Monitoring - Sentry
# https://sentry.io/
# ============================================
SENTRY_DSN=REDACTED
SENTRY_AUTH_TOKEN=your_sentry_auth_token
NEXT_PUBLIC_SENTRY_DSN=REDACTED

# ============================================
# Analytics (Optional)
# ============================================
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Map Services (Optional)
# ============================================
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# ============================================
# Slack Notifications (GPT V1 피드백)
# ============================================
SLACK_WEBHOOK_URL_ALERTS=https://hooks.slack.com/services/xxx/yyy/zzz  # DLQ, Circuit Breaker 알림
SLACK_WEBHOOK_URL_REPORTS=https://hooks.slack.com/services/xxx/yyy/zzz  # 일일 요약 리포트

# ============================================
# Vercel Cron Jobs (GPT V1 피드백)
# ============================================
CRON_SECRET=your_cron_secret  # Cron job 인증 시크릿

# ============================================
# Production Settings
# ============================================
NODE_ENV=development  # development | production | test

