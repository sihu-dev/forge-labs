{
  "name": "hyein-agent",
  "version": "1.0.0",
  "description": "정부지원사업 자동화 마스터 패키지 - AI 기반 공고 수집/분석/사업계획서 자동 생성 시스템",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "start:scheduler": "node dist/scheduler.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "docker:build": "docker build -t hyein-agent .",
    "docker:run": "docker run -p 3000:3000 hyein-agent",
    "collect:only": "tsx scripts/collect-only.ts",
    "analyze": "tsx scripts/analyze-programs.ts",
    "collect:analyze": "npm run collect:only && npm run analyze",
    "notify": "tsx scripts/test-notifications.ts",
    "oauth:google": "tsx scripts/google-oauth.ts",
    "oauth:check": "tsx scripts/check-google-setup.ts",
    "google": "tsx scripts/test-google-services.ts",
    "pipeline": "npm run collect:only && npm run analyze && npm run notify && npm run google",
    "dashboard": "code data/dashboard-summary.md"
  },
  "keywords": [
    "government-support",
    "automation",
    "ai-agent",
    "claude-api",
    "business-plan",
    "startup",
    "korea"
  ],
  "author": "SauceFirst Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@types/nodemailer": "^7.0.4",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "googleapis": "^144.0.0",
    "ioredis": "^5.4.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.11",
    "openai": "^6.10.0",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.1",
    "puppeteer": "^24.32.1",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
