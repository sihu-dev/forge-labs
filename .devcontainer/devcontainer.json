{
  "name": "Forge Labs - Full Stack Monorepo + MCP",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "prisma.prisma",
        "ms-playwright.playwright",
        "github.copilot",
        "github.copilot-chat",
        "anthropic.claude-code"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "chat.mcp.discovery.enabled": true,
        "chat.mcp.enabled": true,
        "chat.mcp.autostart": true,
        "chat.mcp.gallery.enabled": true
      }
    }
  },

  "forwardPorts": [
    3000,
    3010,
    3333,
    54321,
    54322
  ],

  "portsAttributes": {
    "3000": {
      "label": "HEPHAITOS (Trading)",
      "onAutoForward": "notify"
    },
    "3010": {
      "label": "BIDFLOW (Bid Automation)",
      "onAutoForward": "notify"
    },
    "3333": {
      "label": "MCP Server",
      "onAutoForward": "silent"
    },
    "54321": {
      "label": "Supabase Studio",
      "onAutoForward": "openPreview"
    }
  },

  "postCreateCommand": "pnpm install && npm install -g @anthropic-ai/claude-code @anthropic-ai/mcp-server-filesystem @anthropic-ai/mcp-server-memory @anthropic-ai/mcp-server-playwright && bash .github/git-setup.sh",
  "postStartCommand": "bash .github/git-setup.sh 2>/dev/null || (git config --global commit.gpgsign false && git config --global push.default current && git config --global push.autoSetupRemote true) && echo 'ðŸ”¥ FORGE LABS Ready!'",

  "remoteEnv": {
    "NODE_ENV": "development",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "SUPABASE_URL": "${localEnv:SUPABASE_URL}",
    "SUPABASE_ANON_KEY": "${localEnv:SUPABASE_ANON_KEY}",
    "SUPABASE_SERVICE_ROLE_KEY": "${localEnv:SUPABASE_SERVICE_ROLE_KEY}"
  }
}
