# ============================================
# FORGE LABS 환경 변수
# ============================================
# 이 파일을 .env로 복사하고 값을 채워주세요
# cp .env.example .env

# ============================================
# 공통 설정
# ============================================
NODE_ENV=development

# ============================================
# Supabase (필수)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxx
SUPABASE_SECRET_KEY=sb_secret_xxx

# ============================================
# Vercel
# ============================================
VERCEL_TOKEN=your-vercel-token

# ============================================
# Mapbox
# ============================================
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-public-token
MAPBOX_SECRET_TOKEN=sk.your-mapbox-secret-token
EXPO_PUBLIC_MAPBOX_TOKEN=pk.your-mapbox-public-token

# ============================================
# NICE API
# ============================================
NICE_USER_ID=your-nice-user-id
NICE_USER_EMAIL=your-nice-email

# ============================================
# 한국투자증권 KIS
# ============================================
KIS_APP_KEY=your-kis-app-key
KIS_APP_SECRET=your-kis-app-secret
KIS_ACCOUNT_NO=your-account-number
KIS_ACCOUNT_TYPE=mock

# ============================================
# 금융결제원 오픈뱅킹 KFTC
# ============================================
KFTC_CLIENT_ID=your-kftc-client-id
KFTC_CLIENT_SECRET=your-kftc-client-secret
KFTC_REDIRECT_URI=your-redirect-uri
KFTC_USER_SEQ_NO=your-user-seq-no

# ============================================
# 토스 인증 Toss Cert
# ============================================
TOSS_OAUTH_BASE=https://oauth2.cert.toss.im
TOSS_API_BASE=https://cert.toss.im
TOSS_CLIENT_ID=your-toss-client-id
TOSS_CLIENT_SECRET=your-toss-client-secret

# ============================================
# LLM API Keys (최소 하나 필수)
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================
# HEPHAITOS - 거래소 API
# ============================================
# Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Upbit
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=

# Bithumb
BITHUMB_API_KEY=
BITHUMB_API_SECRET=

# ============================================
# FOLIO - 외부 서비스
# ============================================
# Naver Place API
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Kakao Map API
KAKAO_REST_API_KEY=

# ============================================
# DRYON - IoT 설정
# ============================================
# Modbus Gateway
MODBUS_HOST=localhost
MODBUS_PORT=502

# OPC-UA Server
OPCUA_ENDPOINT=opc.tcp://localhost:4840

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# ============================================
# 크롤러 설정
# ============================================
# Brave Search API
BRAVE_API_KEY=

# 프록시 (선택)
HTTP_PROXY=
HTTPS_PROXY=

# ============================================
# 기타
# ============================================
# 로깅 레벨 (debug, info, warn, error)
LOG_LEVEL=info

# 앱별 포트
HEPHAITOS_PORT=3000
FOLIO_PORT=3001
DRYON_PORT=3002
ADE_PORT=3003
